<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/id_textSize"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:text="@string/size_nirmal_land">
    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_textFor_MK"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/j"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/id_count_Of_MK_base"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="10"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/id_textFor_MK"
            app:layout_constraintTop_toTopOf="parent"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4">
            <ImageView
                android:id="@+id/id_Sheet"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/sheet">
            </ImageView>

            <ImageView
                android:id="@+id/id_Sinichka"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/sinichka">
            </ImageView>

            <ImageView
                android:id="@+id/id_Tea"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/tea">
            </ImageView>

            <ImageView
                android:id="@+id/id_Butterfly"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/butterfly">
            </ImageView>

            <ImageView
                android:id="@+id/id_Cherry"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/cherry">
            </ImageView>

            <ImageView
                android:id="@+id/id_Mandarin"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/mandarin">
            </ImageView>

            <ImageView
                android:id="@+id/id_Pumpkin"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/pumpkin">
            </ImageView>

            <ImageView
                android:id="@+id/id_Mushroom"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/mushroom">
            </ImageView>

            <ImageView
                android:id="@+id/id_Peach"
                android:layout_margin="2dp"
                android:layout_width="@dimen/Act_galery_normal_land_width"
                android:layout_height="@dimen/Act_galery_normal_land_height"
                android:layout_gravity="center"
                android:layout_columnWeight="1"
                android:background="@mipmap/peach">
            </ImageView>
        </GridLayout>
    </ScrollView>

</LinearLayout>