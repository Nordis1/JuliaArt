                android:layout_width="@dimen/Act_galery_small_width"
                android:layout_height="@dimen/Act_galery_small_height"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@mipmap/silverjug">

            </ImageView>

            <ImageView
                android:id="@+id/id_Squirrel"
